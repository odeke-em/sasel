<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Setencryptioncredentials" 
    android:orientation="vertical" >

    <EditText
        android:id="@+id/new_iv_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_tv"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/new_encryption_key_tv"
        android:ems="7"
        android:inputType="text" />

    <EditText
        android:id="@+id/new_encryption_key_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_iv_et"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/new_iv_et"
        android:layout_marginTop="26dp"
        android:ems="7"
        android:inputType="text" />

    <TextView
        android:id="@+id/iv_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="40dp"
        android:text="@string/iv_key"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/new_encryption_key_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_encryption_key_et"
        android:layout_alignBottom="@+id/new_encryption_key_et"
        android:layout_alignRight="@+id/iv_tv"
        android:text="@string/encryption_key"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
    